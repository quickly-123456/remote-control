<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for your API server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">185.128.227.222</domain>
    </domain-config>
    
    <!-- For development/testing - you can also allow localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
