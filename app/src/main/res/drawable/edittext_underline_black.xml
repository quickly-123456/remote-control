<!-- res/drawable/edittext_underline.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 下划线 -->
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#C0C0C0" /> <!-- 默认状态灰色 -->
        </shape>
    </item>

    <!-- 聚焦状态下划线（初始不可见） -->
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent" /> <!-- 初始透明 -->
        </shape>
    </item>
</layer-list>
