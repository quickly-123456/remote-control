<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="redmi-k40"
            android:textColor="#000000"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/iv_status"
            android:layout_marginStart="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cirle"
            android:layout_toEndOf="@+id/tv_name"
            app:tint="@color/connected" />

        <ImageView
            android:id="@+id/iv_home"
            android:layout_marginEnd="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_home"
            android:layout_toStartOf="@id/iv_refresh"
            />
        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_refresh"
            android:layout_toStartOf="@id/tv_refresh"
            />
        <TextView
            android:id="@+id/tv_refresh"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新"
            android:layout_toStartOf="@+id/iv_close"
            android:textColor="#000000"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginEnd="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
<!--        <ImageView-->
<!--            android:id="@+id/img_screen"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            />-->
        <com.zhongkong.app.ui.widget.StreamingSurfaceView
            android:id="@+id/img_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>